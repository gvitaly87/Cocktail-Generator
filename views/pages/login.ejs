<img class="blur-hero-image" src="./images/gallery/home-page-hero.jpg" alt="Whiskey being poured into a glass">
<div class="login-container">
  <form class="login-form" method="POST" action="/login">
    <h1 class="login-title">Login to your Mixr Account</h1>
    <label for="email">
      <input type="email" name="email" id="email" required />
      <span class="placeholder">Enter Email</span>
    </label>

    <label for="password">
      <input
        type="password"
        name="password"
        pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}"
        id="password"
        required
      />
      <span class="placeholder">Enter password</span>
    </label>
    <button class="form-btn" type="submit">Sign in</button>
    <p class="message">Not registered? <a href="/register">Create an account</a></p>
  </form>
</div>